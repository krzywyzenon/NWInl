@model List<NorthwindInlV1.Models.Order>

@{
    ViewBag.Title = "ViewOrders";
    Layout = "~/Views/Shared/_AppLayout.cshtml";
}

<div class="col-md-2">
<table class="table-bordered">
    @foreach (var order in Model)
    {
        <tr>
            <td>
                @order.OrderID
            </td>

            <td>
                @order.Customer.CompanyName
            </td>

            <td>
                @Ajax.ActionLink("Details", "OrderDetails", new {id = order.OrderID}, new AjaxOptions
                {
                    InsertionMode = InsertionMode.Replace,
                    UpdateTargetId = "OrderDetails",
                    HttpMethod = "GET"
                })
            </td>
            <td>@Html.ActionLink("Delete", "DeleteOrder", "Order", new{id = order.OrderID}, null)</td>
        </tr>
    }
</table>
</div>

<div  id="OrderDetails"> </div>


