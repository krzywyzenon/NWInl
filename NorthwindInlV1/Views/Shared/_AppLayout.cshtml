<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
    <script src="http://localhost:49471/Scripts/jquery-1.8.0.js"></script>
    <script src="http://localhost:49471/Scripts/jquery.unobtrusive-ajax.js"></script>
</head>
<body>
<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <div>
            <ul class="nav navbar-nav">
                <li>
                    @Html.ActionLink("Find Customer", "FindCustomer", "Customer")
                </li>
                <li>
                    @Html.ActionLink("Add Order", "AddNewOrder", "Order")
                </li>

                <li>
                    @Html.ActionLink("View all orders", "ViewAllOrders", "Order")
                </li>

                <li>
                    @Html.ActionLink("View your orders", "ViewOrders", "Order")
                </li>

                <li>
                    @Html.ActionLink("Account details", "AccountDetails", "Account")
                </li>
                @if (HttpContext.Current.User.Identity.IsAuthenticated)
                {
                    <li>
                        @Html.ActionLink("Logout", "Logout", "Account")
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>
<div>
    @RenderBody()
</div>
</body>
</html>
